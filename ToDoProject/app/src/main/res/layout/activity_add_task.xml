<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6">

    <EditText
        android:id="@+id/taskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Name"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/taskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Description (Optional)"
        android:layout_below="@id/taskName"
        android:padding="16dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/deadlineLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Deadline"
        android:textSize="16sp"
        android:layout_below="@id/taskDescription"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:textColor="#000000"/>

    <!-- Button to select Date -->

    <!-- Button to select Time -->
    <Button
        android:id="@+id/selectDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deadlineLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="27dp"
        android:text="Select Date" />

    <Button
        android:id="@+id/selectTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectDateButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-52dp"
        android:layout_marginEnd="83dp"
        android:text="Select Time" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/selectTimeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:background="#0099CC"
        android:textColor="#FFFFFF"/>
</RelativeLayout>
